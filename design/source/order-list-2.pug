                    li.side-menu__item
                      a.side-menu__link(href='#') Manage Credit Cards
                    li.side-menu__item
                      a.side-menu__link.side-menu__link--active(href='#') My Orders
                    li.side-menu__item
                      a.side-menu__link(href='#') SKY POINTS
                    li.side-menu__item
                      a.side-menu__link(href='#') Unpaid Period
                    li.side-menu__item
                      a.side-menu__link(href='#') Register Platinum Partner
                    li.side-menu__item
                      a.side-menu__link(href='#') Invite a Friend
            .col-lg-9.col-md-12
              .order-list
                .main-content__top
                  h2.main-content__title
                    | My Orders
                    span (2)
                .order-list__table.order-pc
                  .table-customize
                    table.table
                      thead
                        tr
                          th Order ID
                          th ORDER DATE
                          th SHIPPED TO
                          th.txt-center SUB TOTAL
                          th.txt-center SKY POINTS EARNED
                          th.txt-center SKY POINTS USED
