                    | 再入荷リクエスト
                  li.product-badges__item
                    | ベストセラー
            .plan-view
              .row
                each val in [1, 2]
                  .plan-item.col-lg-6.col-md-6
                    .plan-box
                      .plan-header
                        span.plan-header--title Room Type
                      .plan-top
                        .plan-room
                          span.plan-room--name Room Type 001
                          span.plan-room--des Bed Type 001
                        .plan-sky
                          span.plan-sky--price
                            | ￥64,000 
                            label(for="") ~
                          span.plan-sky--point
                            | 14,000SKYPOINTS 
                            label(for="") 獲得
                      .plan-bottom
                        p.plan-bottom--title Detail
                        .plan-bottom-box
                          p.plan-bottom-item
                            img.plan-bottom--img(src='./images/Smoking.png' alt='img')
                            span.plan-bottom--text 喫煙可
                          p.plan-bottom-item
                            img.plan-bottom--img(src='./images/Room-Size.png' alt='img')
                            span.plan-bottom--text 19平米
                          p.plan-bottom-item
                            img.plan-bottom--img(src='./images/Wi-Fi.png' alt='img')
                            span.plan-bottom--text 無料Wi-Fi
                        .plan-bottom-box
                          p.plan-bottom-item
                            img.plan-bottom--img(src='./images/Meal.png' alt='img')
                            span.plan-bottom--text 2食付き
                          p.plan-bottom-item
                            img.plan-bottom--img(src='./images/Check-Out.png' alt='img')
                            span.plan-bottom--text 15:00 - 17:00
                          p.plan-bottom-item
                            img.plan-bottom--img(src='./images/Check-In.png' alt='img')
                            span.plan-bottom--text 11:00
            .plan-view
              .row
                each val in [1, 2, 3]
                  .plan-item.col-lg-4.col-md-4
                    .plan-box
                      .plan-header
                        span.plan-header--title Plan Type
                      .plan-top.plan-custom
                        .plan-room
                          span.plan-room--name Plan Name 001
                          span.plan-room--des Mmember Benefit 001
                        .plan-sky
                          span.plan-sky--price ￥64,000
                      .plan-bottom
                        p.plan-bottom--title Detail
                        .plan-bottom-box
                          p.plan-bottom-item
                            img.plan-bottom--img(src='./images/Meal.png' alt='img')
                            span.plan-bottom--text 2食付き
            .product-tab
              +tabs-pills ({
                  dataPills: [
                    {
                      id: 'description',
                      text: 'Description',
                    },
                    {
                      id: 'info',
                      text: 'Info',
                    }
                  ],
                  active: 0,
                })
