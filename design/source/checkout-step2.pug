                        input.ship-checkbox.dbox-checkbox(type='checkbox', id='ship-box', checked)
                        label
                  .dbox-points
                    p.dbox-item
                      span REDEEMABLE SKY POINTS
                      a.dbox-item--here(href='#' data-toggle='modal' data-target='#modal-step2') Redeem Method
