                      li.side-menu__item
                        a.side-menu__link(href='#') Manage Credit Cards
                      li.side-menu__item
                        a.side-menu__link(href='#') SKY POINTS
                      li.side-menu__item
                        a.side-menu__link(href='#') Unpaid Period
                      li.side-menu__item
                        a.side-menu__link(href='#') Register Platinum Partner
                      li.side-menu__item
                        a.side-menu__link(href='#') Invite a Friend
              .profile-content.col-lg-9.col-md-12
                .favorite-select
                  h4.favorite-select--title My Favourites (4/100)
                  .favorite-select-box
                    .favorite-item
                      a.favorite-radio(href='#')
                        span サービス
                    .favorite-item
                      a.favorite-radio(href='#')
                        span 商品
                .favorite-hollow
                  .favorite-hollow-box
                    img(src='./images/heart.svg' alt='img')
                    p No Favourites yet!
                    p Like something you see? Save them here to your favourites.

