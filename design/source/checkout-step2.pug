block main
  main.main
    .main-fluid.main-fluid--white
      .container
        .main-content
          .step-one.step-one-bg.sky-width
            .checkout-edit-box
              .checkout-edit
                span.checkout--title チェックアウト
                a(href='#').checkout--cart Back to Order Detail & Shipping
            .order-shipping
              p.order--step ステップ2
              h2.order--title Payment
              .reg-list.order-box
