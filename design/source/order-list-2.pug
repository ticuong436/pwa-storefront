                .mobile-order
                  each val in [1, 2]
                    .mobile-list
                      .mobile-list-block
                        .mobile-list-left
                          .mobile-item
                            span.mobile--title Order ID
                            span.mobile--text 0331231
                        .mobile-list-right
                          .mobile-item
                            span.mobile--title Order Date
                            span.mobile--text 29/01/2021
                          .mobile-item
                            span.mobile--title Shipped To
                            span.mobile--text 29/01/2021
