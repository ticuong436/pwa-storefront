block main
  main.main
    .main-fluid.main-fluid--white
      .container
          .bcrum
            a.bcrum-item(href='#')
              | Home
              span >
            span.bcrum-end マイページ
          .main-content
            .row
              .col-lg-3.col-md-12
                .side-mobile
                  .side-toggle.dropdown-toggle
                    a.side-toggle__link(data-toggle='collapse' href='#multi-collapse') My Favourites
                  .collapse#multi-collapse
                    ul.side-menu
                      li.side-menu__item
                        a.side-menu__link.side-menu__link--active(href='#') My Favourites
                      li.side-menu__item
