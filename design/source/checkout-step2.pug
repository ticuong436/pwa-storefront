              .step2-right.col-lg-3.col-md-12
                .step2-block
                  .dbox-order
                    h4.dbox--title
                      span 注文内容
                      span 2 件
                    .dbox-points
                      p.dbox-item
                        span クーポンコード
                        a.dbox-item--here(href='#') enter here
                      p.dbox-item
                        input(class='chmodal--input' type='text')
                        a.dbox-item--here(href='#') apply
                      p.dbox-item
                        label.dbox-item--red Incorrect クーポンコード
                        a.dbox-item--here(href='#') enter again
                    p.dbox-item
                      span 商品合計
                      span ¥20,000
                    p.dbox-item
                      span 送料
                      span ¥2,000
                    p.dbox-item
                      span GIFT料
                      span ¥1,000
                    p.dbox-item.dbox-bold
                      span 小計
                      span ¥23,000
                    p.dbox-item
                      span 消費税
                      span 対象外
                  .dbox-points
                    p.dbox-item
                      span クーポンコード DISCOUNT
